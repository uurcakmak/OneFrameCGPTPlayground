@using OneFrameCGPTPlayground.Mvc.Controllers
@using KocSistem.OneFrame.I18N
@inject HtmlRtlSuffixHelper _htmlRtlSuffixHelper
@inject HtmlMinSuffixHelper _htmlMinSuffixHelper
@using OneFrameCGPTPlayground.Mvc.Helpers
@inject IKsStringLocalizer<LoginAuditLogController> _localizer
@{
    ViewData["Title"] = _localizer["LoginAuditLogList"];
}

@section scripts
{
    <script src="~/metronic/assets/plugins/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/js/helpers/datatablehelper@(_htmlMinSuffixHelper.MinSuffix).js" type="text/javascript"></script>
    <script src="~/js/loginAuditLog/get@(_htmlMinSuffixHelper.MinSuffix).js" type="text/javascript"></script>
    <script src="~/lib/tempusdominus-datepicker/tempusdominus-bootstrap-4.min.js"></script>
    <script type="text/javascript">
        var messageForSuccess = "@_localizer["LoginAuditLogSuccess"]";
        var messageForUnSuccess = "@_localizer["LoginAuditLogNotSuccess"]";
    </script>

}

@section headerBegin
{
    <link href="~/metronic/assets/plugins/custom/datatables/datatables.bundle@(_htmlRtlSuffixHelper.RtlFileSuffix).css" rel="stylesheet" type="text/css" />
    <link href="~/lib/tempusdominus-datepicker/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <style>
        .dropdown-menu {
            width: 100% !important;
        }
    </style>
}

<div class="row">
    <div class="card">
        <div class="card-header border-0 pt-6">
            <div class="card-title">
                <div class="d-flex align-items-center position-relative my-1">
                    <span class="svg-icon svg-icon-1 position-absolute ms-6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="black" />
                            <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="black" />
                        </svg>
                    </span>
                    <input type="text" class="form-control form-control-solid w-250px ps-15 datatable-search" placeholder='@_localizer["DataTable_search"]' />
                </div>
            </div>
            <div class="card-toolbar">
                <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                    <div class="filter">
                        <button type="button" class="btn btn-light-primary me-3" data-kt-menu- data-kt-menu-trigger="click" data-kt-menu-placement="left-end">
                            <span class="svg-icon svg-icon-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <path d="M19.0759 3H4.72777C3.95892 3 3.47768 3.83148 3.86067 4.49814L8.56967 12.6949C9.17923 13.7559 9.5 14.9582 9.5 16.1819V19.5072C9.5 20.2189 10.2223 20.7028 10.8805 20.432L13.8805 19.1977C14.2553 19.0435 14.5 18.6783 14.5 18.273V13.8372C14.5 12.8089 14.8171 11.8056 15.408 10.964L19.8943 4.57465C20.3596 3.912 19.8856 3 19.0759 3Z" fill="black"></path>
                                </svg>
                            </span>@_localizer["LoginAuditLogFilterButton"]
                        </button>
                        <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true">
                            <div class="px-7 py-5">
                                <div class="fs-5 text-dark fw-bolder">@_localizer["FilterOptions"]</div>
                            </div>
                            <div class="separator border-gray-200"></div>
                            <div class="px-7 py-5" data-kt-user-table-filter="form">
                                <div class="mb-10">
                                    <label>@_localizer["StartDate"]:</label>
                                    <input type="text" class="form-control form-control-solid datetimepicker-input" id="startDate" data-toggle="datetimepicker" data-target="#startDate" />

                                </div>
                                <div class="mb-10">
                                    <label>@_localizer["FinishDate"]:</label>
                                    <input type="text" class="form-control form-control-solid datetimepicker-input" id="finishDate" data-toggle="datetimepicker" data-target="#finishDate" />
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button type="reset" id="filterReset" class="btn btn-light btn-active-light-primary fw-bold me-2 px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="reset">@_localizer["Reset"]</button>
                                    <button type="button" id="filterApply" class="btn btn-primary fw-bold px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="filter">@_localizer["Apply"]</button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <button type="button" class="btn btn-light-primary me-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                        <span class="svg-icon svg-icon-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <rect opacity="0.3" x="12.75" y="4.25" width="12" height="2" rx="1" transform="rotate(90 12.75 4.25)" fill="black" />
                                <path d="M12.0573 6.11875L13.5203 7.87435C13.9121 8.34457 14.6232 8.37683 15.056 7.94401C15.4457 7.5543 15.4641 6.92836 15.0979 6.51643L12.4974 3.59084C12.0996 3.14332 11.4004 3.14332 11.0026 3.59084L8.40206 6.51643C8.0359 6.92836 8.0543 7.5543 8.44401 7.94401C8.87683 8.37683 9.58785 8.34458 9.9797 7.87435L11.4427 6.11875C11.6026 5.92684 11.8974 5.92684 12.0573 6.11875Z" fill="black" />
                                <path d="M18.75 8.25H17.75C17.1977 8.25 16.75 8.69772 16.75 9.25C16.75 9.80228 17.1977 10.25 17.75 10.25C18.3023 10.25 18.75 10.6977 18.75 11.25V18.25C18.75 18.8023 18.3023 19.25 17.75 19.25H5.75C5.19772 19.25 4.75 18.8023 4.75 18.25V11.25C4.75 10.6977 5.19771 10.25 5.75 10.25C6.30229 10.25 6.75 9.80228 6.75 9.25C6.75 8.69772 6.30229 8.25 5.75 8.25H4.75C3.64543 8.25 2.75 9.14543 2.75 10.25V19.25C2.75 20.3546 3.64543 21.25 4.75 21.25H18.75C19.8546 21.25 20.75 20.3546 20.75 19.25V10.25C20.75 9.14543 19.8546 8.25 18.75 8.25Z" fill="#C4C4C4" />
                            </svg>
                        </span>
                        @_localizer["Export"]
                    </button>
                    <div class="menu menu-sub menu-sub-dropdown w-100px w-md-250px" data-kt-menu="true">
                        <div class="px-7 py-5">
                            <div class="fs-5 text-dark fw-bolder">@_localizer["ExportOptions"]</div>
                        </div>
                        <div class="separator border-gray-200"></div>
                        <div class="px-7 py-5" data-kt-user-table-filter="form">
                            <div class="row mb-5">
                                <div class="col-lg-12">
                                    <span><em class="far fa-file-excel"></em></span>
                                    <a href="#" id="excelExport" class="menu-link px-3" title="@_localizer["LoginAuditLogExcelButton"]">
                                        @_localizer["LoginAuditLogExcelButton"]
                                    </a>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-lg-12">
                                    <span><em class="far fa-file-pdf"></em></span>
                                    <a href="#" id="pdfExport" class="menu-link px-3" title="@_localizer["PdfExport"]">
                                        @_localizer["PdfExport"]
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="card-body pt-0">
            <table class="table align-middle table-row-dashed fs-6 gy-5" id="table_loginAuditLog">
                <thead>
                    <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                        <th>@_localizer["IP"]</th>
                        <th>@_localizer["Hostname"]</th>
                        <th>@_localizer["MacAddress"]</th>
                        <th>@_localizer["ApplicationUserName"]</th>
                        <th>@_localizer["OSName"]</th>
                        <th>@_localizer["BrowserDetail"]</th>
                        <th>@_localizer["Success"]</th>
                        <th>@_localizer["CreationDate"]</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>